rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // By default, allow public read access to all files.
    // This is common for files like images that need to be displayed publicly.
    match /{allPaths=**} {
      allow read;
      // Restrict write access to authenticated users only.
      // This prevents unauthorized users from uploading or deleting files.
      allow write: if request.auth != null;
    }
  }
}

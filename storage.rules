rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in a user-specific folder.
    // The {userId} wildcard captures the user's unique ID from the path.
    match /users/{userId}/{allPaths=**} {
      
      // Allow read access to anyone. This is useful for sharing images publicly.
      allow read: if true;
      
      // Allow write (create, update, delete) access only if the requesting
      // user's ID matches the {userId} in the path. This ensures users can
      // only write to their own folder.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

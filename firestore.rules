
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check ownership based on UID
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper function to validate ad creation
    function isCreatingAdForSelf(userId) {
      return isOwner(userId) && request.resource.data.userId == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Users can only read and write their own user document
      allow read, update, delete: if isOwner(userId);
      // Anyone can create a user document (on signup)
      allow create: if request.auth != null;

      // Rules for the 'ads' subcollection within a user's document
      match /ads/{adId} {
        // Allow a user to list their own ads.
        allow list: if isOwner(userId);
        // Allow read, update, delete on individual ads only if the user is the owner.
        allow read, update, delete: if isOwner(userId);
        // Allow creating an ad if the ad data belongs to the user.
        allow create: if isCreatingAdForSelf(userId);
      }
    }
  }
}

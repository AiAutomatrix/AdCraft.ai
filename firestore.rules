
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check ownership based on UID
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper function to validate ad creation
    function isCreatingAdForSelf(userId) {
      return isOwner(userId) && request.resource.data.userId == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow anyone to read a user's profile information.
      // This is also required for the OG image generator to find the ad's parent user.
      allow read: if true;
      // Users can only write their own user document
      allow update, delete: if isOwner(userId);
      // Anyone can create a user document (on signup)
      allow create: if request.auth != null;

      // Rules for the 'ads' subcollection within a user's document
      match /ads/{adId} {
        // Allow anyone to list and read ads.
        allow list, read: if true;
        // Allow update and delete only if the user is the owner.
        allow update, delete: if isOwner(userId);
        // Allow creating an ad if the ad data belongs to the user.
        allow create: if isCreatingAdForSelf(userId);
      }
    }
  }
}
